
.wrapper
  .chat-side
    .chat-side__side-header
      .chat-side__side-header__box
        %p.chat-side__side-header__box__user-name
          = current_user.name
        .chat-side__side-header__box__menu
          .chat-side__side-header__box__menu__new
            =link_to "#", class: "chat-side__btn" do
              = fa_icon 'edit'
          .chat-side__side-header__box__menu__edit-user
            =link_to edit_user_path(current_user), class: "chat-side__btn" do
              = fa_icon 'cog'
    .chat-side__groups
      .chat-side__groups__group
        %p.chat-side__groups__group__group-name グループの名前
        %p.chat-side__groups__group__latest-message 新着メッセージ
  .chat-main
    = render partial: "current-group"
    = render partial: "current-message"
    .form
      .input-box
        %form
          %input#message-content.input-box__text{placeholder:"type a message"}
            %label.input-box__image
              = fa_icon 'picture-o', class: "image_file"
              %input#hidden{type:"file"}
      %a{href:"#"}
        %input{type:"submit",name:"commit", class:"submit-btn", value:"Send"}

