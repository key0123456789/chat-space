.message{data: {id: "#{message.id}"}}
  .message__upper-info
    .message__upper-info__talker
      = message.user.name
    .message__upper-info__date 
      = message.created_at.strftime("%Y/%m/%d(%a) %H:%M")
  %P.message__text{data: {message: "content"}}
    = message.content
    = image_tag(message.image.to_s, class: "message-image")
